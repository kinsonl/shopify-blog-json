{%- layout none -%}
{
"articles": [
  {% paginate blog.articles by 1000 %}
    {% assign articles = blog.articles | sort: 'published_at' | reverse %}
    {% for article in articles %}{
    "id":{{article.id | json}},
    "title":{{article.title | json}},
    "image":{{article.image.src | img_url: '500x500', crop: 'center' | json}},
    "handle":{{article.handle | json}},
    "published_at":{{article.published_at | date: "%B %d %Y" | json}}
  }{% unless forloop.last %},{% endunless %}{% endfor %}
  {% endpaginate %}
]
}
